{
    //manifest spec: http://developer.chrome.com/extensions/manifest.html
    //required
    "name": "Tribal Knowledge",
    "version": "0.01",
    "manifest_version": 2,
    "permissions": [
        "contextMenus"
    ],

    "background": {
        "persistent": false,
        "scripts": ["js/background.js"]
    },

    //recommended
    "description": "Code documentation made simple.",

    "icons": {
        "19": "images/icon_19.png",
        "38": "images/icon_38.png",
        "128": "images/icon_128.png"
    },

    //required
    "browser_action": {
        "default_title": "browser_action: default_title",
        "default_icon": {
            "19": "images/icon_19.png",
            "38": "images/icon_38.png"
        },
        "default_popup": "html/popup.html"
    },

    //additional
    "options_page": "html/options.html",
    "homepage_url": "http://yourdomainhere.com/"
}